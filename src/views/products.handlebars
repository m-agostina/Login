<body style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav class="bg-light rounded-3 p-3 mb-4 d-flex justify-content-between align-items-center">
                    <h1 class="m-0 fs-2">Â¡Bienvenido {{user.first_name}}!</h1>
                    <a href="/login/profile" class="btn btn-secondary">Perfil</a>
                </nav>
            </div>
        </div>
         <div class="row">
            <div class="col">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Tus datos</h5>
                        <p class="card-text">Nombre: {{user.first_name}}</p>
                        <p class="card-text">Apellido: {{user.last_name}}</p>
                        <p class="card-text">Edad: {{user.age}}</p>
                        <p class="card-text">Email: {{user.email}}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4 px-1 py-1">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text">Price: ${{price}}</p>
                        <p class="card-text">Category: {{category}}</p>
                        <button class="btn btn-secondary add-to-cart-btn" data-product-id="{{_id}}">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>

<script src="/js/products.js"></script>